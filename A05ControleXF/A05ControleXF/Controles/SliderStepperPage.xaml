<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A05ControleXF.Controles.SliderStepperPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Slider 
                Minimum="0"
                Maximum="100"
                Value="20"
                MinimumTrackColor="Red"
                MaximumTrackColor="Blue"
                ThumbColor="Green"
                
                ValueChanged="ActionValorMudou"
                
                />
            
            <Label HorizontalOptions="Center" x:Name="SliderResult"/>

            <Stepper HorizontalOptions="Center"
                Minimum="1"
                Maximum="6"
                Increment="1"
                Value="3"
                
                ValueChanged="ActionValorMudouStepper"
                />

            <Label HorizontalOptions="Center" x:Name="StepperResult"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>